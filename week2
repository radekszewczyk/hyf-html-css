}
#grid-floats .grid-item {
    float: left;
    width: 50%;
    font-family:Arial, Helvetica, sans-serif;
}
#grid-floats .grid-item:nth-child(even) {
    clear: left;
    
    }

#grid-floats .grid-item:nth-child(1) {
  width: 100%
    
}
@media screen and (min-width: 1024px) {
#grid-floats .grid-item {
    width: 250;
}
#grid-floats .grid-item:nth-child(even) {
  clear: none;
    }
    #grid-floats .grid-item:nth-child(4n+1) {
        clear: left;
    }
}

